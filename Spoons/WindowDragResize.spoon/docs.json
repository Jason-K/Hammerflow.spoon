  "description": "Move and resize windows using keyboard modifiers and mouse dragging",
  "items": [
    {
      "def": "WindowDragResize:init()",
      "desc": "Initialize the spoon",
      "returns": [
        {
          "name": "WindowDragResize",
          "desc": "The WindowDragResize object"
        }
      ]
    },
    {
      "def": "WindowDragResize:bindMouseEvents()",
      "desc": "Binds the mouse events for window dragging and resizing",
      "returns": [
        {
          "name": "WindowDragResize",
          "desc": "The WindowDragResize object"
        }
      ]
    },
    {
      "def": "WindowDragResize:unbindMouseEvents()",
      "desc": "Unbinds the mouse events for window dragging and resizing",
      "returns": [
        {
          "name": "WindowDragResize",
          "desc": "The WindowDragResize object"
        }
      ]
    },
    {
      "def": "WindowDragResize:start()",
      "desc": "Start listening for mouse events to drag and resize windows",
      "returns": [
        {
          "name": "WindowDragResize",
          "desc": "The WindowDragResize object"
        }
      ]
    },
    {
      "def": "WindowDragResize:stop()",
      "desc": "Stop listening for mouse events",
      "returns": [
        {
          "name": "WindowDragResize",
          "desc": "The WindowDragResize object"
        }
      ]
    },
    {
      "def": "WindowDragResize.moveModifiers",
      "desc": "Table containing modifiers that should be held to move windows. Default is {\"ctrl\", \"alt\"}."
    },
    {
      "def": "WindowDragResize.resizeModifiers",
      "desc": "Table containing modifiers that should be held to resize windows. Default is {\"ctrl\", \"alt\", \"shift\"}."
    },
    {
      "def": "WindowDragResize.continuousMove",
      "desc": "Boolean indicating whether movement should be continuous. Default is true."
    }
  ]
}